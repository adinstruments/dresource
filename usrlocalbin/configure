#!/bin/bash
set -o nounset

echo export AWS_USERNAME=$1 > /config/config.sh
echo export AWS_ACCESS_KEY_ID=$2 >> /config/config.sh
echo export AWS_SECRET_ACCESS_KEY=$3 >> /config/config.sh

echo "{\"AWS_USERNAME\":\"$1\",\"AWS_ACCESS_KEY_ID\":\"$2\",\"AWS_SECRET_ACCESS_KEY\":\"$3\"}" > /config/config.json