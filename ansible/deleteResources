---
- hosts: localhost
  connection: local
  tasks:
    - name: Load resource file
      shell: cat /config/resourceFile
      register: resourceFile
      changed_when: False

    - name: Parse resource file
      set_fact: resourceList="{{ resourceFile.stdout | from_json }}"

    - name: Delete S3 Buckets
      s3_bucket:
        name: "{{ item }}"
        state: absent
        force: yes
      with_items:
        "{{ resourceList.s3 | default([]) }}"

    - name: Delete DynamoDB Tables
      dynamodb_table:
        name: "{{ item }}"
        region: "{{ resourceList.dynamodb[item].region }}"
        hash_key_name: "{{ resourceList.dynamodb[item].hash_key_name }}"
        state: absent
      with_items:
        "{{ resourceList.dynamodb | default([]) }}"